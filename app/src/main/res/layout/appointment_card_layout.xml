<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_appointment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvDoctorNAme_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Doctor Name"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/person_20"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/tvLocation_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Location"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/marker_20"
                android:drawablePadding="10dp"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tvTime_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="16sp"
                android:drawableLeft="@drawable/clock_20"
                android:drawablePadding="10dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
